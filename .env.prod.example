# Production Environment Variables for docker-compose.prod.yml
# Copy this file to .env.prod and fill in your actual values

# PostgreSQL
POSTGRES_USER=fraud_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=fraud_detection

# Database URL (used by backend)
DATABASE_URL=postgresql+asyncpg://fraud_user:CHANGE_THIS_SECURE_PASSWORD@postgres:5432/fraud_detection

# LLM Configuration
OLLAMA_MODEL=llama3.2:3b
OLLAMA_BASE_URL=http://host.docker.internal:11434

# Azure OpenAI (for cloud production via Managed Identity)
USE_AZURE_OPENAI=false
AZURE_OPENAI_ENDPOINT=
AZURE_CLIENT_ID=

# External APIs
OPENSANCTIONS_API_KEY=

# App Configuration
LOG_LEVEL=info
