# Development environment configuration
# Copy this file to terraform.tfvars and fill in your values
# NEVER commit terraform.tfvars to git!

# Azure authentication (required)
azure_subscription_id = "YOUR_AZURE_SUBSCRIPTION_ID"
azure_tenant_id       = "YOUR_AZURE_TENANT_ID"

# Project configuration
project_name = "fraud-detection"
location     = "eastus"
environment  = "dev"

# Database configuration (B1ms = 1 vCore, 2GB RAM, ~$12/month)
postgresql_sku_name             = "B_Standard_B1ms"
postgresql_storage_mb           = 32768 # 32 GB
postgresql_backup_retention_days = 7

# Backend Container App (1-2 replicas, 0.5 vCPU, 1GB RAM)
backend_replicas_min = 1
backend_replicas_max = 2
backend_cpu          = "0.5"
backend_memory       = "1Gi"

# Frontend Container App (1-2 replicas, 0.5 vCPU, 1GB RAM)
frontend_replicas_min = 1
frontend_replicas_max = 2
frontend_cpu          = "0.5"
frontend_memory       = "1Gi"

# Azure OpenAI (GPT-3.5 Turbo only for dev, no GPT-4 to save costs)
azure_openai_gpt35_capacity = 30  # TPM (thousands of tokens per minute)
azure_openai_gpt4_capacity  = 0   # Disabled in dev

# Storage (ChromaDB)
chromadb_storage_size_gb = 10

# Container Registry
acr_sku = "Basic" # ~$5/month

# Monitoring
log_analytics_retention_days  = 30   # Days
app_insights_sampling_percentage = 100 # No sampling in dev

# Tags
tags = {
  Project     = "Fraud Detection Multi-Agent System"
  ManagedBy   = "Terraform"
  Environment = "development"
  CostCenter  = "R&D"
  Owner       = "your-email@example.com"
}
